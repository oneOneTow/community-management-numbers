        student_id=#{motto,jdbcType=VARCHAR},
        head_portrait=#{headPortrait,jdbcType=BLOB},
        where person_id=#{personId,jdbcType=INTEGER}
    </update>

    <select id="findByStuId" resultMap="PersonalMap">
