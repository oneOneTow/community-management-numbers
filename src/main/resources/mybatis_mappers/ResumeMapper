<mapper namespace="vens.ai.graduate.design.numbers.mapper.ResumeMapper">
    <resultMap id="ResumeMap" type="vens.ai.graduate.design.numbers.entity.Resume">
        <id column="r_id" property="resumeId"/>
        <result column="student_name" property="studentName"/>
        <result column="student_id" property="studentId"/>
        <result column="sex" property="sex"/>
        <result column="nation" property="nation"/>
        <result column="birth_place" property="birthPlace"/>
        <result column="birth_date" property="birthDate"/>
        <result column="college_and_major" property="collegeAndMajor"/>
        <result column="call_number" property="callNumber"/>
        <result column="email" property="email"/>
        <result column="taboo" property="taboo"/>
        <result column="first_choice" property="firstChoice"/>
        <result column="second_choice" property="secondChoice"/>
        <result column="choice_reason" property="choiceReason"/>
        <result column="hobbies" property="hobbies"/>
        <result column="descrip_self" property="descripSelf"/>
        <result column="remarks" property="remarks"/>
        <result column="head_portrait" property="headPortrait"/>
        <result column="status" property="status"/>
    </resultMap>
    <insert id="add">
        INSERT INTO
        RESUME(
        student_name,
        student_id,
        sex,
        nation,
        birth_place,
        birth_date,
        college_and_major,
        call_number,
        email,
        taboo,
        first_choice,
        second_choice,
        choice_reason,
        hobbies,
        descrip_self,
        remarks,
        head_portrait,
        status
        )
        VALUES(
        #{studentName},
        #{studentId},
        #{sex},
        #{nation},
        #{birthPlace},
        #{birthDate},
        #{collegeAndMajor},
        #{callNumber},
        #{email},
        #{taboo},
        #{firstChoice},
        #{secondChoice},
        #{choiceReason},
        #{hobbies},
        #{descripSelf},
        #{remarks},
        #{headPortrait},
        #{status}
        )
    </insert>
    <select id="findByStuId" resultMap="ResumeMap">
        select * from resume where student_id=#{}
    </select>
    <select id="findByStuName" resultMap="ResumeMap">
        select * from resume where student_name=#{}
    </select>
    <select id="findByStuName" resultMap="ResumeMap">
        select * from resume
    </select>
    <update id="update">
        UPDAT SET
        student_name=#{studentName},
        student_id=#{studentId},
        sex= #{sex},
        nation= #{nation},
        birth_place=#{birthPlace},
        birth_date=#{birthDate},
        college_and_major= #{collegeAndMajor},
        call_number= #{callNumber},
        email= #{email},
        taboo=#{taboo},
        first_choice=#{firstChoice},
        second_choice=#{secondChoice},
        choice_reason= #{choiceReason},
        hobbies=#{hobbies},
        descrip_self#{descripSelf},
        remarks= #{remarks},
        head_portrait=#{headPortrait},
        status=#{status}
        WHERE r_id=#{resumeId}
    </update>
    <select id="findNoRead" resultMap="ResumeMap">
        <!--查询未读简历-->
        select * from RESUME WHERE satus='0'
    </select>















    </update>
</mapper>
